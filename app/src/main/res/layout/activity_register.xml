<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#91C1FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nanum_squareround_eb"
            android:text="분실물 등록 "
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/main_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/layout_round_10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/botton_bar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="5px"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="필수항목"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="제목 입력" />

        <EditText
            android:id="@+id/etRegTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:ems="10"
            android:hint="등록 물건에 대한 제목을 입력하세요."
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="분실물 입력" />

        <EditText
            android:id="@+id/etRegName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:ems="10"
            android:hint="분실물명 입력 예) 갈색가방"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="분실장소" />

        <EditText
            android:id="@+id/etRegPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:ems="10"
            android:hint="분실한 장소를 입력하세요."
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="분실날짜" />

        <EditText
            android:id="@+id/etRegDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:ems="10"
            android:hint="분실한 날짜를 입력하세요 (YYYY-MM-DD)"
            android:inputType="date|textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="대분류" />

        <Spinner
            android:id="@+id/mainCatSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="소분류" />

        <Spinner
            android:id="@+id/subCatSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:paddingLeft="10dp"
            android:text="사진등록"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgReg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="10px"
            app:srcCompat="@drawable/capture_image" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/botton_bar2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnRegComplete"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_20dp"
            android:fontFamily="@font/nanum_squareround_b"
            android:onClick="onClick"
            android:text="분실물 등록완료"

            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:backgroundTint="#58A1FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>